INSTALL=@INSTALL@

srcdir = .
top_srcdir = @top_srcdir@
VPATH = @srcdir@/src
prefix = @prefix@
exec_prefix = @exec_prefix@
top_builddir = .

pkgdatadir = $(datadir)/@PACKAGE@
pkgincludedir = $(includedir)/@PACKAGE@
pkglibdir = $(libdir)/@PACKAGE@
pkglibexecdir = $(libexecdir)/@PACKAGE@

install_sh_DATA = $(install_sh) -c -m 644
install_sh_PROGRAM = $(install_sh) -c
install_sh_SCRIPT = $(install_sh) -c
INSTALL_HEADER = $(INSTALL_DATA)

build_triplet = @build@
host_triplet = @host@
target_triplet = @target@

bindir=${prefix}/bin
libdir=${prefix}/lib

LN_S=@LN_S@
AR = @AR@
CC = @CC@
CFLAGS = @CFLAGS@ -Wall -fpic
CPPFLAGS = @CPPFLAGS@ -I$(srcdir)/src
ECHO_C = @ECHO_C@
ECHO_N = @ECHO_N@
ECHO_T = @ECHO_T@
INSTALL = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_SCRIPT = @INSTALL_SCRIPT@
INSTALL_STRIP_PROGRAM = @INSTALL_STRIP_PROGRAM@
LD = @LD@
LDFLAGS = @LDFLAGS@ -shared -Wl,-soname,$(LIBNAME).1
RANLIB = @RANLIB@

CPPFLAGS += -I$(top_srcdir)/src
CPPFLAGS += @MAT_DEBUG@ @MAT_TLS@

HEADERS = mat-events.h \
		mat-probe.h \
		mat-events.h \
		mat-proc.h \
		mat-socket.h \
		mat-file.h \
		mat-unix.h

SOURCES = \
	src/mat-events.c \
	src/mat-probe.c \
	src/mat-remote.c \
	src/mat-file.c \
	src/mat-socket.c \
	src/mat-malloc.c \
	src/mat-proc.c \
	@CPU_FILES@

OBJS=mat-events.o \
	mat-probe.o \
	mat-remote.o \
	mat-file.o \
	mat-malloc.o \
	mat-socket.o \
	mat-proc.o \
	@CPU_OBJS@

LIBEXT=so
LIBVER=1

LIBNAME=libmat.${LIBEXT}

COMPILE=$(CC) $(CFLAGS) $(CPPFLAGS)

LIBS=-ldl

all:	$(LIBNAME)

clean:
	$(RM) -f $(OBJS) $(LIBNAME)

$(LIBNAME):		$(OBJS)
	$(CC) -o $(LIBNAME) $(LDFLAGS) $(OBJS) $(LIBS)

install:
	mkdir -p $(DESTDIR)${libdir}
	$(INSTALL) $(LIBNAME) $(DESTDIR)${libdir}/$(LIBNAME).$(LIBVER)
	rm -f $(DESTDIR)${libdir}/$(LIBNAME)
	${LN_S} $(LIBNAME).$(LIBVER) $(DESTDIR)${libdir}/$(LIBNAME)

.c.o:
	$(COMPILE) -c $<

.NOEXPORT:

$(OBJS):	$(HEADERS)
